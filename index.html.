  <script>
    const items = document.querySelectorAll('li');
    const STORAGE_KEY = 'malla_psicologia_ticked';

    // Cargar estado
    const saved = JSON.parse(localStorage.getItem(STORAGE_KEY) || '[]');
    items.forEach((item, i) => {
      if (saved.includes(i)) {
        item.classList.add('ticked');
      }
    });

    // Guardar estado al clickear
    items.forEach((item, i) => {
      item.addEventListener('click', () => {
        item.classList.toggle('ticked');
        const newState = Array.from(items).reduce((arr, el, idx) => {
          if (el.classList.contains('ticked')) arr.push(idx);
          return arr;
        }, []);
        localStorage.setItem(STORAGE_KEY, JSON.stringify(newState));
      });
    });
  </script>
